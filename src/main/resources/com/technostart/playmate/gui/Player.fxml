<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<Pane fx:id="pane" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
      onKeyPressed="#changeFrame" xmlns="http://javafx.com/javafx/8.0.102-ea"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.technostart.playmate.gui.PlayerController">
    <children>
        <SplitPane dividerPositions="0.7" prefHeight="720.0" prefWidth="1280.0">
            <items>
                <AnchorPane minHeight="0.0" minWidth="0.0" SplitPane.resizableWithParent="true">
                    <children>
                        <VBox minHeight="0.0" minWidth="0.0" SplitPane.resizableWithParent="true">
                            <children>
                                <ImageView fx:id="currentFrameView" fitHeight="270.0" fitWidth="495.0" pickOnBounds="true"
                                           preserveRatio="true">
                                    <VBox.margin>
                                        <Insets left="60.0" top="20.0"/>
                                    </VBox.margin>
                                </ImageView>
                                <ImageView fx:id="processedFrameView" fitHeight="270.0" fitWidth="495.0" pickOnBounds="true"
                                           preserveRatio="true">
                                    <VBox.margin>
                                        <Insets left="60.0" top="5.0"/>
                                    </VBox.margin>
                                </ImageView>
                                <HBox prefHeight="50.0" prefWidth="900.0">
                                    <children>
                                        <Button fx:id="openVideoButton" mnemonicParsing="false" onAction="#openFile"
                                                text="Open Video">
                                            <HBox.margin>
                                                <Insets left="80.0" top="15.0"/>
                                            </HBox.margin>
                                        </Button>
                                        <Button fx:id="previousFrame" mnemonicParsing="false"
                                                onAction="#showPreviousFrame" text="&lt;&lt;">
                                            <HBox.margin>
                                                <Insets left="77.0" top="15.0"/>
                                            </HBox.margin>
                                        </Button>
                                        <Button fx:id="nextFrame" mnemonicParsing="false" onAction="#showNextFrame"
                                                text="&gt;&gt;">
                                            <HBox.margin>
                                                <Insets left="52.0" top="15.0"/>
                                            </HBox.margin>
                                        </Button>
                                        <Slider fx:id="sliderFrame" blockIncrement="5.0" max="1000.0"
                                                onMouseReleased="#showCurrentFrame" prefWidth="160.0">
                                            <HBox.margin>
                                                <Insets left="40.0" top="20.0"/>
                                            </HBox.margin>
                                        </Slider>
                                    </children>
                                </HBox>
                                <HBox prefHeight="55.0" prefWidth="900.0">
                                    <children>
                                        <Label text="FRAME - ">
                                            <font>
                                                <Font size="24.0"/>
                                            </font>
                                            <HBox.margin>
                                                <Insets left="200.0" top="8.0"/>
                                            </HBox.margin>
                                        </Label>
                                        <Label fx:id="position" text="0" textFill="RED">
                                            <HBox.margin>
                                                <Insets top="8.0"/>
                                            </HBox.margin>
                                            <font>
                                                <Font size="24.0"/>
                                            </font>
                                        </Label>
                                    </children>
                                </HBox>
                            </children>
                        </VBox>
                    </children>
                </AnchorPane>
                <AnchorPane minHeight="0.0" minWidth="0.0" SplitPane.resizableWithParent="true">
                    <children>
                        <VBox minHeight="0" minWidth="0" SplitPane.resizableWithParent="true">
                            <children>
                                <CheckBox fx:id="checkBoxCanny" mnemonicParsing="false" onAction="#cannySelected"
                                          text="Edge Detection">
                                    <padding>
                                        <Insets top="5.0"/>
                                    </padding>
                                    <VBox.margin>
                                        <Insets left="90.0" top="40.0"/>
                                    </VBox.margin>
                                </CheckBox>
                                <Slider fx:id="threshold" onMouseReleased="#cannySelected" prefHeight="30.0"
                                        prefWidth="30.0" value="50.0">
                                    <VBox.margin>
                                        <Insets left="75.0" right="75.0"/>
                                    </VBox.margin>
                                </Slider>
                            </children>
                        </VBox>
                    </children>
                </AnchorPane>
            </items>
        </SplitPane>
    </children>
</Pane>
