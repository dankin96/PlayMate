<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<Pane fx:id="pane" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
      onKeyPressed="#changeFrame" xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.technostart.playmate.gui.PlayerController">
    <children>
        <VBox>
            <children>
                <MenuBar fx:id="menuBar">
                    <menus>
                        <Menu text="File">
                            <items>
                                <MenuItem accelerator="Shortcut+O" onAction="#openFile" text="Open Video"/>
                                <SeparatorMenuItem/>
                                <MenuItem onAction="#openSettings" text="Import Settings"/>
                                <MenuItem onAction="#saveSettings" text="Export Settings"/>
                            </items>
                        </Menu>
                        <Menu text="Edit">
                            <items>
                                <MenuItem onAction="#clearBuffer" text="Clear Buffer"/>
                                <SeparatorMenuItem/>
                                <MenuItem accelerator="Shortcut+R" onAction="#applySettings" text="Apply Settings"/>
                            </items>
                        </Menu>
                    </menus>
                </MenuBar>
                <SplitPane dividerPositions="0.8" prefHeight="768.0" prefWidth="1366.0">
                    <items>
                        <AnchorPane minHeight="0.0" minWidth="0.0" SplitPane.resizableWithParent="true">
                            <children>
                                <VBox minHeight="0.0" minWidth="0.0" SplitPane.resizableWithParent="true">
                                    <children>
                                        <ImageView fx:id="processedFrameView" fitHeight="600.0" fitWidth="1000.0"
                                                   pickOnBounds="true" preserveRatio="true">
                                            <VBox.margin>
                                                <Insets left="40.0" top="20.0"/>
                                            </VBox.margin>
                                        </ImageView>
                                        <HBox prefHeight="50.0" prefWidth="900.0">
                                            <children>
                                                <HBox prefHeight="50.0" prefWidth="300.0">
                                                    <children>
                                                        <Label prefHeight="30.0" prefWidth="111.0" text="FRAME - ">
                                                            <font>
                                                                <Font size="24.0"/>
                                                            </font>
                                                            <HBox.margin>
                                                                <Insets left="70.0" top="8.0"/>
                                                            </HBox.margin>
                                                        </Label>
                                                        <Label fx:id="positionLabel" text="0" textFill="RED">
                                                            <HBox.margin>
                                                                <Insets top="8.0"/>
                                                            </HBox.margin>
                                                            <font>
                                                                <Font size="24.0"/>
                                                            </font>
                                                        </Label>
                                                    </children>
                                                </HBox>
                                                <Button fx:id="previousFrameBtn" mnemonicParsing="false"
                                                        onAction="#showPreviousFrame" text="&lt;&lt;">
                                                    <HBox.margin>
                                                        <Insets left="50.0" top="10.0"/>
                                                    </HBox.margin>
                                                </Button>
                                                <Button fx:id="nextFrameBtn" mnemonicParsing="false"
                                                        onAction="#showNextFrame" text="&gt;&gt;">
                                                    <HBox.margin>
                                                        <Insets left="30.0" top="10.0"/>
                                                    </HBox.margin>
                                                </Button>
                                                <Slider fx:id="frameSlider" blockIncrement="5.0" max="1000.0"
                                                        onMouseReleased="#showCurrentFrame" prefHeight="16.0"
                                                        prefWidth="456.0">
                                                    <HBox.margin>
                                                        <Insets left="40.0" top="15.0"/>
                                                    </HBox.margin>
                                                </Slider>
                                            </children>
                                        </HBox>
                                    </children>
                                </VBox>
                            </children>
                        </AnchorPane>
                        <AnchorPane minHeight="0.0" minWidth="0.0" SplitPane.resizableWithParent="true">
                            <children>
                                <ScrollPane layoutY="28.0" prefHeight="739.0" prefWidth="269.0">
                                    <padding>
                                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                                    </padding>
                                    <content>
                                        <VBox fx:id="settingsBox" prefHeight="214.0" prefWidth="241.0"/>
                                    </content>
                                </ScrollPane>
                            </children>
                        </AnchorPane>
                    </items>
                </SplitPane>
            </children>
        </VBox>
    </children>
</Pane>
